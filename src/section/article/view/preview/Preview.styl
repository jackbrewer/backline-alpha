.preview
  position relative
  width 100%
  height 100%
  display flex
  flex-direction column
  background $color--grey-95
  color $color--grey-25
  border 1px solid $color--grey-75

  path
    fill $color--grey-50

.preview__toolbar
  flex 0 1 auto
  display flex
  flex-wrap wrap
  align-items center
  justify-content space-between
  padding 10px
  min-height 52px
  border-bottom 1px solid $color--grey-75


.preview__range
.preview__current
  flex-shrink 1

.preview__range

  .icon
    vertical-align top

    &:first-child
      margin-right 5px

    &:last-child
      margin-left 5px

.preview__wrapper
  flex 1 0 auto

.preview__frame
  width 100%
  height 100%
  position absolute
  transform-origin 0 0
  border 0
  margin auto



// TODO: Move to proper Control component

.control--slider
  overflow visible
  background transparent
  outline 0
  -webkit-appearance none

  padding-top rem(10)
  padding-bottom rem(10)
  margin 0
  position relative
  z-index 1

.control--slider::-webkit-slider-runnable-track
  background $color--grey-50
  height 4px

.control--slider::-moz-range-track
  background $color--grey-50
  height 4px

.control--slider::-ms-track
  background transparent
  color transparent
  height 20px
  border 0

.control--slider::-ms-fill-lower
.control--slider::-ms-fill-upper
  background $color--grey-50
  background-image linear-gradient(to bottom, $color--white 40%, $color--grey-50 40%, $color--grey-50 60%, $color--white 60%)

.control--slider::-webkit-slider-thumb
  -webkit-appearance none
  width rem(20)
  height rem(20)
  background $color--primary
  border-radius 50%
  cursor pointer
  position relative
  top rem(-9)

.control--slider::-moz-range-thumb
  width rem(20)
  height rem(20)
  background $color--primary
  border-radius 50%
  cursor pointer
  border 0

.control--slider::-ms-thumb
  width rem(20)
  height rem(20)
  background $color--primary
  border-radius 50%
  cursor pointer
  border 0
