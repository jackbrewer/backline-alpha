$layout--toolbar-height ?= 70px

.header
  padding $spacing--default
  background-color $color--grey-10
  color $color--white
  text-align center
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.header__meta
  color $color--grey-50
  font-size 14px
