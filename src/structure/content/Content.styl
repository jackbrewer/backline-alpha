//
// CONTENT
// =======
// Wrapper for most page-specific content
//

$content--background-color ?= $color--white

.content
  flex 1 1 auto
  display flex
  background-color $content--background-color
  position relative

  +width-min($mq--tablet)
    &:before
    &:after
      content ''
      position absolute
      left 0
      right 0
      height 5px

    &:before
      top 0
      background-image linear-gradient(to bottom, rgba($color--black, 0.1), rgba($color--black, 0))

    &:after
      bottom 0
      background-image linear-gradient(to top, rgba($color--black, 0.1), rgba($color--black, 0))


.content__inner
  padding $spacing--default * 2 0

  +width-min($mq--tablet)
    flex 1 1 auto
    min-height 0
    overflow-y auto
    -webkit-overflow-scrolling touch
