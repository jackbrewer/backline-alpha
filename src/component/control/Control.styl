//
// CONTROL
// =======
// Used to markup and style all form controls: inputs, textareas, selects etc.
//

$control--text
  display block
  width 100%
  padding 0.25em 0.5em
  border 1px solid $color--grey
  line-height $font--line-height
  font-family inherit
  font-size inherit
  background-color $color--white
  border-radius 0
  color inherit
  &:focus
    border-color $color--primary
    outline 0

.control--text
  @extend $control--text
  -webkit-appearance none

  &.control--error
    border-color $color--error

.control--choice
  @extend $control--text
  height $font--line-height + 0.5em // match the line-height and vertical padding of $control--text

.control--multiline
  resize vertical
  height auto

.control--check
  margin-right 10px
  line-height inherit
  vertical-align middle

  & + span
    vertical-align middle

  span + &
    margin-right 0
    margin-left 10px

.control--check-list
  li + li
    margin-top rem(10)

.control--file
  line-height 1
  font-size inherit
  font-family inherit




.control--feature
  border 0
  border-bottom 1px solid $color--mid-grey
  padding-left 0
  padding-right 0

  transition all 300ms ease-out
  &[value='']:not(:focus)
    background-color tint($color--primary, 90%)

.control--medium-type
  font-size 30px

.control--large-type
  font-size 40px


.control--inline-muted
  border 0
  color $color--mid-grey
  padding-left 0
  padding-right 0
  transition all 300ms ease-out
  border-bottom 1px solid transparent

  &:hover
  &:focus
  &:active
    color inherit
    border-bottom 1px solid
