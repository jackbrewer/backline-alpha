.image-preview
  position relative
  height 100%
  width 100%
  min-width 70px
  min-height 70px
  background-color $color--grey-95

.image-preview__inner
  padding 5px
  position absolute
  height 100%
  width 100%
  display flex
  justify-content center
  align-items center

.image-preview__image
  background-size contain
  background-position 50% 50%
  background-repeat no-repeat
  width 100%
  height 100%

  .image-preview--cover &
    background-size cover
