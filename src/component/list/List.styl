//
// LIST
// ====
//


$list--cell-padding ?= 10px

.list
  display table
  width 100%
  border-collapse collapse

.list__head
  display table-header-group

.list__body
  display table-row-group
  background-color $color--white
  box-shadow 0 2px 2px rgba($color--black, 0.05)

.list__row
  display table-row

.list__row--head
  font-weight bold

.list__cell
  border-color $color--grey-90
  border-style solid
  border-width 1px 0
  display table-cell
  padding $list--cell-padding

  &:first-child
    border-left-width 1px

  &:last-child
    border-right-width 1px

  .list__head &
    border 0
