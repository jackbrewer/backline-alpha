//
// AVATAR
// ======
//

$avatar--default-size ?= 50px

.avatar
  display inline-block
  border-radius 50%
  overflow hidden
  background-color $color--primary
  vertical-align middle
  width $avatar--default-size
  height $avatar--default-size
  line-height $avatar--default-size

.avatar--has-image
  background-color transparent

  img
    width inherit

.avatar__initials
  width 100%
  height 100%
  text-align center
  vertical-align middle
  color $color--white
  font-size $avatar--default-size * 0.5
