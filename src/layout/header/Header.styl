//
// HEADER
// ======
//

$layout--toolbar-height ?= 70px

.header
  padding $spacing--default
  border-bottom 1px solid $color--light-grey
  background-color $color--black
  color $color--white
  text-align center
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.header__meta
  color $color--grey
  font-size 14px
